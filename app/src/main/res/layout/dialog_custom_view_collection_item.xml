<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/collection_dialog_item_chosen"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/collection_dialog_item_upload_photo"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/upload_photo"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_chosen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/upload_straight"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_upload_photo"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/collection_dialog_item_watch_information"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/watch_information"
        app:layout_constraintTop_toBottomOf="@id/upload_straight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/watch_information_straight"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_watch_information"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/collection_dialog_item_share_experience"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/share_experience"
        app:layout_constraintTop_toBottomOf="@id/watch_information_straight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/share_straight"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_share_experience"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/collection_dialog_item_modify_time"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/modify_time"
        app:layout_constraintTop_toBottomOf="@id/share_straight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/time_straight"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_modify_time"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/collection_dialog_item_remove"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/remove_data"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_modify_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/remove_straight"
        app:layout_constraintTop_toBottomOf="@id/collection_dialog_item_remove"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
