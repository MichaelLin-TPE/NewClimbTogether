<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mountain_news_recycler_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/mountain_news_progressbar"
        app:layout_constraintTop_toTopOf="@id/mountain_news_recycler_view"
        app:layout_constraintBottom_toBottomOf="@id/mountain_news_recycler_view"
        app:layout_constraintLeft_toLeftOf="@id/mountain_news_recycler_view"
        app:layout_constraintRight_toRightOf="@id/mountain_news_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
