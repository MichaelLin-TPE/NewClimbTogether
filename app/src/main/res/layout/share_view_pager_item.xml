<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:elevation="0.1dp"
        android:id="@+id/share_text_pic_count"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/normal_text_size"
        android:gravity="center"
        android:background="@drawable/pic_count_background"
        android:layout_width="@dimen/pic_count_width"
        android:layout_height="@dimen/pic_count_height"/>

    <com.makeramen.roundedimageview.RoundedImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/share_select_photo"
        app:riv_corner_radius="10dip"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_item_photo"/>



</androidx.constraintlayout.widget.ConstraintLayout>
