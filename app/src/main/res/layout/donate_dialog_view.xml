<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/donate_thirty"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/buy_me_drink"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/donate_pay_thirty"
        android:text="@string/i_pay"
        app:layout_constraintTop_toTopOf="@id/donate_thirty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/donate_thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/donate_sixty"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/donate_thirty"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/buy_me_drink"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/donate_pay_sixty"
        android:text="@string/i_pay"
        app:layout_constraintTop_toTopOf="@id/donate_sixty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/donate_sixty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
