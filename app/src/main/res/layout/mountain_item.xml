<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:id="@+id/mountain_rather_click_area"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/mountain_rather_icon"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_corner_radius="10dip"
        android:layout_width="@dimen/mountain_item_photo_width"
        android:layout_height="@dimen/mountain_item_photo_height"/>

    <TextView
        android:id="@+id/mountain_rather_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normal_text_size"
        tools:text="玉山"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/mountain_rather_icon"
        app:layout_constraintTop_toTopOf="@id/mountain_rather_icon"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mountain_rather_height"
        android:textSize="@dimen/small_text_size"
        tools:text="3952公尺"
        app:layout_constraintLeft_toRightOf="@id/mountain_rather_icon"
        app:layout_constraintTop_toBottomOf="@id/mountain_rather_title"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mountain_rather_difficulty"
        android:textSize="@dimen/small_text_size"
        tools:text="難易度 : A級"
        app:layout_constraintLeft_toRightOf="@id/mountain_rather_icon"
        app:layout_constraintTop_toBottomOf="@id/mountain_rather_height"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mountain_rather_location"
        android:textSize="@dimen/small_text_size"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="嘉義縣"
        app:layout_constraintLeft_toRightOf="@id/mountain_rather_icon"
        app:layout_constraintTop_toBottomOf="@id/mountain_rather_difficulty"
        app:layout_constraintRight_toLeftOf="@id/mountain_rather_time"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mountain_rather_top_icon"
        android:scaleType="centerCrop"
        android:src="@drawable/flag_no_top"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/member_item_icon_size"
        android:layout_height="@dimen/member_item_icon_size"/>

    <TextView
        android:id="@+id/mountain_rather_time"
        android:gravity="center"
        tools:text="2002/10/10"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mountain_rather_top_icon"
        app:layout_constraintLeft_toLeftOf="@id/mountain_rather_top_icon"
        app:layout_constraintRight_toRightOf="@id/mountain_rather_top_icon"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>
