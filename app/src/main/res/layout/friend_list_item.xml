<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/friend_click_area"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/friend_item_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/friend_photo_size"
        android:layout_height="@dimen/friend_photo_size"/>

    <TextView
        android:id="@+id/friend_item_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintLeft_toRightOf="@id/friend_item_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
