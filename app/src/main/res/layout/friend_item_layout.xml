<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/friend_item_user_photo"
        app:riv_oval="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/invite_item_user_photo_size"
        android:layout_height="@dimen/invite_item_user_photo_size"/>

    <TextView
        android:id="@+id/friend_item_display_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normal_text_size"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/friend_item_user_photo"
        app:layout_constraintLeft_toRightOf="@id/friend_item_user_photo"
        android:layout_marginStart="10dp"
        tools:text="XXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/friend_item_email"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@id/friend_item_user_photo"
        app:layout_constraintLeft_toRightOf="@id/friend_item_user_photo"
        android:layout_marginStart="10dp"
        tools:text="XXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>
