<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_left_item_user_photo"
        android:src="@drawable/empty_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/weather_big_icon"
        android:layout_height="@dimen/weather_big_icon"/>
    <TextView
        android:id="@+id/chat_left_item_name"
        android:textSize="@dimen/smaller_text_size"
        app:layout_constraintTop_toTopOf="@id/chat_left_item_user_photo"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_left_image_one"
        android:padding="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/chat_left_item_name"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_user_photo"
        app:riv_corner_radius="5dip"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="@dimen/chat_left_image_width"
        android:layout_height="@dimen/chat_left_image_height"/>

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/chat_left_share_image_one"
        android:src="@drawable/share_chat"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/chat_left_image_one"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_image_one"
        app:layout_constraintLeft_toRightOf="@id/chat_left_image_one"
        android:layout_marginStart="2dp"
        android:layout_width="@dimen/share_chat_size"
        android:layout_height="@dimen/share_chat_size"/>
    <TextView
        android:id="@+id/chat_left_item_time_one"
        tools:text="15:00PM"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/chat_left_image_one"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_image_one"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_left_image_two"
        android:padding="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/chat_left_image_one"
        app:layout_constraintLeft_toRightOf="@id/chat_left_image_one"
        app:riv_corner_radius="5dip"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="@dimen/chat_left_image_width"
        android:layout_height="@dimen/chat_left_image_height"/>

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/chat_left_share_image_two"
        android:src="@drawable/share_chat"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/chat_left_image_two"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_image_two"
        app:layout_constraintLeft_toRightOf="@id/chat_left_image_two"
        android:layout_marginStart="2dp"
        android:layout_width="@dimen/share_chat_size"
        android:layout_height="@dimen/share_chat_size"/>

    <TextView
        android:id="@+id/chat_left_item_time_two"
        tools:text="15:00PM"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        tools:visibility="visible"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/chat_left_image_two"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_image_two"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/chat_shape_left"
        android:gravity="center|start"
        android:text="XXXXXXXXX"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/chat_left_item_name"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_user_photo"
        android:id="@+id/chat_left_item_message"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chat_left_item_time"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_message"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_item_message"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
