<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_left_item_user_photo"
        android:src="@drawable/empty_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_oval="true"
        android:layout_width="@dimen/weather_big_icon"
        android:layout_height="@dimen/weather_big_icon"/>

    <TextView
        android:background="@drawable/chat_shape_left"
        android:gravity="center"
        android:text="XXXXXXXXX"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/chat_left_item_user_photo"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_user_photo"
        android:id="@+id/chat_left_item_message"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chat_left_item_time"
        app:layout_constraintLeft_toRightOf="@id/chat_left_item_message"
        app:layout_constraintBottom_toBottomOf="@id/chat_left_item_message"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
