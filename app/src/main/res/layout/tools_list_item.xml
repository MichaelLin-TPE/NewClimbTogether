<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tools_item_click_area"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:contentDescription="@null"
        android:id="@+id/tools_item_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/spinner_down_icon_size"
        android:layout_height="@dimen/spinner_down_icon_size"/>

    <TextView
        android:id="@+id/tools_item_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/tools_item_icon"
        app:layout_constraintLeft_toLeftOf="@id/tools_item_icon"
        app:layout_constraintRight_toRightOf="@id/tools_item_icon"
        tools:text="XXXXXX"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
