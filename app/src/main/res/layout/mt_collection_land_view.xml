<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/land_view_click_area"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:contentDescription="@null"
        android:id="@+id/land_view_photo"
        app:riv_corner_radius="10dip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/empty_photo"
        android:layout_width="@dimen/land_view_photo_width"
        android:layout_height="@dimen/land_view_photo_height"/>

<!--    <ImageView-->
<!--        android:contentDescription="@null"-->
<!--        android:id="@+id/land_view_photo"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        android:src="@drawable/empty_photo"-->
<!--        android:layout_width="@dimen/land_view_photo_width"-->
<!--        android:layout_height="@dimen/land_view_photo_height"/>-->

    <TextView
        android:id="@+id/land_view_title"
        tools:text="XXXX"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintTop_toTopOf="@id/land_view_photo"
        app:layout_constraintLeft_toRightOf="@id/land_view_photo"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/land_view_height"
        android:layout_marginTop="10dp"
        tools:text="XXXX"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/land_view_title"
        app:layout_constraintLeft_toLeftOf="@id/land_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/land_view_time"
        android:layout_marginTop="10dp"
        tools:text="XXXX"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/land_view_height"
        app:layout_constraintLeft_toLeftOf="@id/land_view_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>
