<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:background="@drawable/button_shape_not_press"
        android:padding="10dp"
        android:gravity="center"
        android:text="XXXXXXXXX"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/chat_item_message"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chat_item_time"
        app:layout_constraintRight_toLeftOf="@id/chat_item_message"
        app:layout_constraintBottom_toBottomOf="@id/chat_item_message"
        android:textSize="@dimen/smaller_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
