<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/search_chat_icon"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icn_vod_sort"
        android:layout_width="@dimen/spinner_down_icon_size"
        android:layout_height="@dimen/spinner_down_icon_size"/>
    <EditText
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:hint="@string/search"
        app:layout_constraintRight_toLeftOf="@id/search_chat_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_chat_icon"
        android:layout_marginEnd="10dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/search_edit_content"
        android:background="@drawable/edit_shap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <ImageView
        android:contentDescription="@null"
        app:layout_constraintRight_toLeftOf="@id/search_chat_down"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:id="@+id/search_chat_up"
        android:src="@drawable/up_arrow"
        android:layout_width="@dimen/spinner_down_icon_size"
        android:layout_height="@dimen/spinner_down_icon_size"/>
    <ImageView
        android:contentDescription="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/search_chat_down"
        android:src="@drawable/down_arrow"
        android:layout_width="@dimen/spinner_down_icon_size"
        android:layout_height="@dimen/spinner_down_icon_size"/>


    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
