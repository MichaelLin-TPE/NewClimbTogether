<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voting_dialog_item_click_area"
    android:layout_height="wrap_content">

    <RadioButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/voting_dialog_item_rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/voting_dialog_item_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorPrimaryDark"
        tools:text="測試項目"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/voting_dialog_item_rad"
        app:layout_constraintBottom_toBottomOf="@id/voting_dialog_item_rad"
        app:layout_constraintLeft_toRightOf="@id/voting_dialog_item_rad"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
