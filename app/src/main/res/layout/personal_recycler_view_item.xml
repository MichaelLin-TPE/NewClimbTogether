<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/personal_item_click_area"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/personal_item_user_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_oval="true"

        android:layout_width="@dimen/personal_user_photo_size"
        android:layout_height="@dimen/personal_user_photo_size"/>

    <TextView
        android:id="@+id/personal_item_display_name"
        android:textSize="@dimen/normal_text_size"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/personal_item_user_photo"
        tools:text="XXXX"
        app:layout_constraintTop_toTopOf="@id/personal_item_user_photo"
        app:layout_constraintLeft_toRightOf="@id/personal_item_user_photo"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/personal_item_message"
        android:textSize="@dimen/small_text_size"
        tools:text="XXXX"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@id/personal_item_time"
        app:layout_constraintTop_toBottomOf="@id/personal_item_display_name"
        app:layout_constraintLeft_toRightOf="@id/personal_item_user_photo"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/personal_item_time"
        android:textSize="@dimen/small_text_size"
        tools:text="XXXX"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
