<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/voting_item_click_area"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/voting_item_title"
        tools:text="測試標題"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toLeftOf="@id/voting_item_end"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/voting_item_creator"
        tools:text="發起人:Michael  截止日 : 2020/04/01"
        app:layout_constraintTop_toBottomOf="@id/voting_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/voting_item_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/voting_item_end"
        android:textColor="@color/red"
        android:text="@string/voting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
