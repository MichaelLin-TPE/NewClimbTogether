<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/detail_content_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mountain_detail"
        android:contentDescription="@null"
        android:layout_width="@dimen/detail_content_icon_size"
        android:layout_height="@dimen/detail_content_icon_size"/>


    <TextView
        app:layout_constraintTop_toTopOf="@id/detail_content_icon"
        app:layout_constraintLeft_toRightOf="@id/detail_content_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/detail_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/detail_icon"
        app:layout_constraintTop_toTopOf="@id/detail_meter"
        app:layout_constraintBottom_toBottomOf="@id/detail_path"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mountain_detail"
        android:contentDescription="@null"
        android:layout_width="@dimen/detail_content_icon_size"
        android:layout_height="@dimen/detail_content_icon_size"/>

    <TextView
        android:id="@+id/detail_meter"
        tools:text="XXXX"
        android:layout_marginStart="15sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/detail_content"
        app:layout_constraintLeft_toRightOf="@id/detail_icon"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/detail_location"
        tools:text="XXXX"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/detail_meter"
        app:layout_constraintLeft_toLeftOf="@id/detail_meter"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_title"
        tools:text="XXXX"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/detail_location"
        app:layout_constraintLeft_toLeftOf="@id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_difficult"
        tools:text="XXXX"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/detail_title"
        app:layout_constraintLeft_toLeftOf="@id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_path"
        tools:text="XXXX"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/detail_difficult"
        app:layout_constraintLeft_toLeftOf="@id/detail_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
